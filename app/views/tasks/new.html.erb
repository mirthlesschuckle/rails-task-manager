<%# form_with - is a rails helper to build forms %>
<h1>New Task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed, checked_value: true, unchecked_value: false %>
  <%= f.submit %>
<% end %>

<ul style="list-style-type: none">
  <li><%= link_to "Back to tasks", tasks_path %></li>
</ul>
